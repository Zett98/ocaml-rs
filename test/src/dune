(include_subdirs unqualified)

(rule
 (deps (glob_files *.rs))
 (targets libocamlrs_test_stubs.a dllocamlrs_test_stubs.so)
 (action
  (progn
   ; Build the Rust code
   (run cargo build --target-dir %{project_root}/../../target --release)
   ; This is needed to support Linux and macOS shared libraries
   (run sh -c
     "mv %{project_root}/../../target/release/libocamlrs_test_stubs.so ./dllocamlrs_test_stubs.so 2> /dev/null || \
      mv %{project_root}/../../target/release/libocamlrs_test_stubs.dylib ./dllocamlrs_test_stubs.so")
   ; Copy over the static library too
   (run mv %{project_root}/../../target/release/libocamlrs_test_stubs.a libocamlrs_test_stubs.a))))

(executable
 (name test)
 (modules conv types callbacks runtime custom util test)
 (libraries unix alcotest)

 ; Link the Rust library
 (foreign_archives ocamlrs_test_stubs))
 ;(c_library_flags
 ; (-lpthread -lc -lm)))

